import * as React from 'react';
import { Box } from '@mui/material';

export default function TwoPane({ left, right, leftWidth = 380 }) {
  return (
    <Box sx={{ display: 'grid', gridTemplateColumns: { xs: '1fr', md: `${leftWidth}px 1fr` }, gap: 2 }}>
      <Box
        sx={{
          height: { xs: 'auto', md: 'calc(100vh - 190px)' },
          overflow: { xs: 'visible', md: 'auto' }
        }}
      >
        {left}
      </Box>
      <Box
        sx={{
          height: { xs: 'auto', md: 'calc(100vh - 190px)' },
          overflow: { xs: 'visible', md: 'auto' }
        }}
      >
        {right}
      </Box>
    </Box>
  );
}
