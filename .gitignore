// Store a dev-only "current user" in localStorage
const KEY = "dev_impersonate_v1";

export function getImpersonation() {
  try { return JSON.parse(localStorage.getItem(KEY) || "null"); }
  catch { return null; }
}
export function setImpersonation(user) {
  if (!user) localStorage.removeItem(KEY);
  else localStorage.setItem(KEY, JSON.stringify(user));
}
export function clearImpersonation() { localStorage.removeItem(KEY); }

