export const MATURITY_OPTIONS = [
  { value: 3, label: 'Level 3' },
  { value: 4, label: 'Level 4' },
];

// ensures currently selected values remain in the options list
export const ensureSelected = (options, selected) => {
  const map = new Map((options || []).map(o => [o.value, o]));
  (selected || []).forEach(v => {
    if (!map.has(v)) map.set(v, { value: v, label: String(v) });
  });
  return Array.from(map.values());
};

export const toLabelMap = (options) => {
  const m = new Map();
  (options || []).forEach(o => m.set(o.value, o.label));
  return m;
};
