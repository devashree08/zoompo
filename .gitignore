import React from 'react';
import { FormControl, InputLabel, Select, MenuItem, Checkbox, ListItemText } from '@mui/material';

export default function MultiSelect({
  label,
  value = [],
  options = [],           // [{ value, label }]
  onChange,
  placeholder = 'Selectâ€¦',
  ...props
}) {
  const handle = (event) => onChange?.(event.target.value);

  const render = (selected) => {
    if (!selected?.length) return placeholder;
    if (options?.length && selected.length === options.length) return 'All';
    if (selected.length > 2) return `${selected.length} selected`;
    const map = new Map(options.map(o => [o.value, o.label]));
    return selected.map(v => map.get(v) ?? v).join(', ');
  };

  return (
    <FormControl size="small" fullWidth>
      <InputLabel>{label}</InputLabel>
      <Select
        multiple
        label={label}
        value={value}
        onChange={handle}
        renderValue={render}
        MenuProps={{ PaperProps: { style: { maxHeight: 360 } } }}
        {...props}
      >
        {options.map((opt) => (
          <MenuItem key={opt.value} value={opt.value}>
            <Checkbox checked={value.indexOf(opt.value) > -1} />
            <ListItemText primary={opt.label} />
          </MenuItem>
        ))}
      </Select>
    </FormControl>
  );
}
