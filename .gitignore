public interface IAuthorizationService
{
    Task<bool> CanEditBusinessUnitAsync(string employeeId, string businessUnit);
}

public class AuthorizationService : IAuthorizationService
{
    private readonly IRoleRepository _repo;
    private const string AdminRole = "admins";

    public AuthorizationService(IRoleRepository repo)
    {
        _repo = repo;
    }

    public async Task<bool> CanEditBusinessUnitAsync(string employeeId, string businessUnit)
    {
        var roles = await _repo.GetUserRolesAsync(employeeId);
        return roles.Any(r =>
            r.Equals(AdminRole, StringComparison.OrdinalIgnoreCase) ||
            r.Equals(businessUnit, StringComparison.OrdinalIgnoreCase));
    }
}
