// Map by Function CODE (GV, ID, PR, DE, RS, RC)
export const FUNCTION_COLORS = {
  GV: { bg: '#f9f49d', shadow: '0px 4px 10px rgba(0,0,0,0.15)' },  // GOVERN
  ID: { bg: '#4bb2e0', shadow: '0px 4px 10px rgba(0,0,0,0.15)' },  // IDENTITY
  PR: { bg: '#918cea', shadow: '0px 4px 10px rgba(0,0,0,0.15)' },  // PROTECT
  DE: { bg: '#fab746', shadow: '0px 4px 10px rgba(0,0,0,0.15)' },  // DETECT
  RS: { bg: '#e57676', shadow: '0px 4px 10px rgba(0,0,0,0.15)' },  // RESPOND
  RC: { bg: '#7df59f', shadow: '0px 4px 10px rgba(0,0,0,0.15)' },  // RECOVER
};

// Try to extract "(XX)" code from "GOVERN (GV)" etc.
export const getFunctionCode = (functionName) => {
  if (!functionName) return null;
  const m = functionName.match(/\(([A-Z]{2})\)/);
  return m ? m[1] : null;
};
