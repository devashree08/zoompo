{/* Inline status line under the controls */}
<Box sx={{ mt: 1 }}>
  <Typography variant="caption" color="text.secondary">
    {comp.state === 'Completed' && comp.at
      ? `Completed by ${comp.by || '—'} on ${comp.at.toLocaleString()}`
      : comp.state === 'Reopened' && comp.at
      ? `Reopened by ${comp.by || '—'} on ${comp.at.toLocaleString()}`
      : 'Not complete'}
  </Typography>
</Box>
