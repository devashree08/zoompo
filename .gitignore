import api from '../../../lib/axiosClient';

/** Fetches user name injected by your gateway/header service. */
export async function fetchUserInfo() {
  const { data } = await api.get('/GetUserInfo');

  // Normalize case variants just in case the API changes its casing:
  const first = data?.firstName ?? data?.FirstName ?? data?.givenName ?? 'NULL';
  const last  = data?.lastName  ?? data?.LastName  ?? data?.surname  ?? 'NULL';

  return { firstName: first || 'NULL', lastName: last || 'NULL' };
}
