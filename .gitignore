import * as React from 'react';
import { Box } from '@mui/material';

const COLORS = {
  'GOVERN (GV)':   '#f9f49d',
  'IDENTIFY (ID)': '#4bb2e0',
  'PROTECT (PR)':  '#918cea',
  'DETECT (DE)':   '#fab746',
  'RESPOND (RS)':  '#e57676',
  'RECOVER (RC)':  '#7df59f',
};

export default function FunctionBadge({ functionName }) {
  const color = COLORS[functionName] || '#ccc';
  return (
    <Box
      sx={{
        width: 10, height: 10, borderRadius: .5, bgcolor: color,
        boxShadow: '0 2px 6px rgba(0,0,0,.15)', mr: 1
      }}
    />
  );
}
