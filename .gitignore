import * as React from 'react';
import { Tabs, Tab } from '@mui/material';

export default function OrgTabs({ orgs = [], activeOrgID, editableOrgID, onChange }) {
  const value = activeOrgID ?? (orgs[0]?.orgID ?? 0);
  return (
    <Tabs
      value={value}
      onChange={(_, v) => onChange?.(v)}
      sx={{ mb: 1, '& .MuiTab-root': { textTransform: 'none' } }}
    >
      {orgs.map(o => (
        <Tab
          key={o.orgID}
          value={o.orgID}
          label={`${o.orgName}${o.orgID === editableOrgID ? ' (editing)' : ' (view only)'}`}
        />
      ))}
    </Tabs>
  );
}
