const patchRow = React.useCallback((key, patchOrFullRow) => {
  setRows(prev =>
    prev.map(r => ( `${r.orgID}|${r.csF2SubcategoryID}|${r.maturityLevel}|${r.attributeNum}` === key
      ? (patchOrFullRow.attributeNum ? patchOrFullRow : { ...r, ...patchOrFullRow })
      : r
    ))
  );
}, []);

