import { toast } from "react-toastify";

export const toastForbidden = (msg = "You donâ€™t have permission to perform this action.") =>
  toast.error(msg, { toastId: "forbidden" }); // toastId dedupes if spam-clicked

export const toastInfo = (msg) => toast.info(msg);
export const toastSuccess = (msg) => toast.success(msg);
export const toastWarn = (msg) => toast.warn(msg);
export const toastError = (msg) => toast.error(msg);

