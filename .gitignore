PDATE r
  SET ChangeSummary = 
    CASE
      -- if there were no real mods, just show N/A
      WHEN s.ModBullets IS NULL THEN 'N/A'
      -- otherwise either Consolidation or Evolution with bullet list
      WHEN s.OldCount > 1 THEN 
        CONCAT(
          '**Consolidation of ', s.OldIDs, ' → ', r.subcatid, ':**',
          CHAR(13) + CHAR(10),
          s.ModBullets
        )
      ELSE 
        CONCAT(
          '**Evolution of ', s.OldIDs, ' → ', r.subcatid, ':**',
          CHAR(13) + CHAR(10),
          s.ModBullets
        )
    END
